---
export interface Props {
  href: string;
  imgSrc: string;
  imgAlt: string;
  title: string;
  description: string;
}

const { href, imgSrc, imgAlt, title, description } = Astro.props;
---

<a rel="noopener noreferrer" target="_blank" class="bg-opacity-90 rounded-lg block shadow-md hover:shadow-xl transition-shadow duration-200 overflow-hidden flex flex-col md:flex-row bg-aquamarine-700">
  <img src={imgSrc} alt={imgAlt} class="w-full md:w-1/3 h-48 md:h-auto object-cover rounded-lg md:rounded-none md:rounded-l-lg shadow-lg transition-transform duration-200"/>
  <div class="p-4 text-gray-900 flex-1">
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-gray-950">{description}</p>
  </div>
</a>
