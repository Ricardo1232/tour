<div class="grid grid-cols-1 gap-5 justify-items-center px-12">
    <div class="bg-white p-0.5 bg-opacity-15 rounded-lg shadow-lg overflow-hidden">
        <form
            class="bg-aquamarine-800 bg-opacity-40 rounded-lg shadow-lg overflow-hidden max-w-md w-full px-2 py-3"
            action="#"
        >
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3">
                    <label
                        class="block text-gray-300 font-bold md:text-right mb-1 md:mb-0 pr-4"
                        for="nombre"
                    >
                        Nombre
                    </label>
                </div>
                <div class="md:w-2/3">
                    <input
                        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-800 leading-tight focus:outline-none focus:bg-white focus:border-green-900 bg-opacity-75"
                        id="nombre"
                        type="text"
                        placeholder="Jane Doe"
                    />
                </div>
            </div>
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3">
                    <label
                        class="block text-gray-300 font-bold md:text-right mb-1 md:mb-0 pr-4"
                        for="correo"
                    >
                        Correo
                    </label>
                </div>
                <div class="md:w-2/3">
                    <input
                        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-800 leading-tight focus:outline-none focus:bg-white focus:border-green-900 bg-opacity-75"
                        id="correo"
                        type="email"
                        placeholder="ejemplo@gmail.com"
                    />
                </div>
            </div>
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3"></div>
                <label class="md:w-2/3 block text-gray-500 font-bold">
                    <input class="mr-2 leading-tight" type="checkbox" />
                    <span class="text-sm"> Send me your newsletter! </span>
                </label>
            </div>
            <div class="md:flex md:items-center">
                <div class="md:w-1/3"></div>
                <div class="md:w-2/3">
                    <button
                        class="shadow bg-aquamarine-900 hover:bg-aquamarine-700 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                        type="button"
                    >
                        Enviar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
